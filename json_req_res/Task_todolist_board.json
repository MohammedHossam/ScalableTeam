{
    "APIs": [
        {
            "title": "Add Task To The TodoList/Board",
            "description": "Adding Task To The TodoList Or the Board",
            "method": "POST",
            "URL": "/api/tasks/AddTask",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/json"
                },
                {
                    "key": "Authorization",
                    "value": "Token"
                }
            ],
            "body": {
                "idTodoList": {
                    "type": "String",
                    "value": "String",
                    "ref": "Collections/Todolist"
                },
                "idBoard": {
                    "type": "String",
                    "value": "String",
                    "ref": "Collections/Board"
                },
                "idSection": {
                    "type": "String",
                    "value": "String",
                    "ref": "Collections/Section"
                },
                "description": {
                    "type": "String",
                    "value": "String"
                },
                "priority": {
                    "type": "Enum",
                    "value": "H/M/L"
                },
                "dueDate": {
                    "type": "Date",
                    "value": "DD.MM.YYYY"
                }
            },
            "responses": [
                {
                    "status": 200,
                    "description": "OK",
                    "schema": {
                        "type": "Object",
                        "items": {
                            "type": "String",
                            "value": "Created Task at the Todolist/Board with Id",
                            "ref": "Collections/Task"
                          }
                    }
                },
                {
                    "status": 401,
                    "description": "Unauthorized"
                },
                {
                    "status": 403,
                    "description": "Forbidden"
                },
                {
                    "status": 404,
                    "description": "Not Found"
                }
            ]
        },

